/* esp32-basic devicetree overlay
 * Demonstrates how to enable and alias GPIO, ADC and PWM devices.
 * Adjust pin numbers to match your board variant.
 */

#include <zephyr/dt-bindings/pwm/pwm.h>

&gpioa {
    status = "okay";
};

&gpioc {
    status = "okay";
};


/ {
    aliases {
        /* led0 should alias the LED node label, not the gpio controller */
        userled = &led0;
				userswitch = &btn0;
        useradc = &adc1;
        useradcch = &adc1_ch0;
    };

    leds {
        compatible = "gpio-leds";

        led0: d13 {
            gpios = <&gpiod 13 GPIO_ACTIVE_HIGH>; /* PC13 is user LED on many STM32F4 variants */
        };
    };

		buttons {
        compatible = "gpio-keys";
        debounce-interval-ms = <50>;
        polling-mode;

        btn0: a0 {
            gpios = <&gpioa 0 GPIO_ACTIVE_LOW>; /* PA0 is often user button; verify for your board */
        };
    };
};

&adc1 {
    status = "okay";
    #address-cells = <1>;
    #size-cells = <0>;
    // vref-mv = <1210>;

    adc1_ch0: channel@0 {
        reg = <0>;
        zephyr,gain = "ADC_GAIN_1_4";
        zephyr,reference = "ADC_REF_INTERNAL";
        zephyr,vref-mv = <1210>;
        zephyr,acquisition-time = <ADC_ACQ_TIME_DEFAULT>;
        zephyr,resolution = <12>;
    };
};