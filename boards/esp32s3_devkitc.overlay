/* esp32-basic devicetree overlay
 * Demonstrates how to enable and alias GPIO, ADC and PWM devices.
 * Adjust pin numbers to match your board variant.
 */

#include <zephyr/dt-bindings/pwm/pwm.h>

&gpio0 {
    status = "okay";
};

/ {
    aliases {
        /* led0 should alias the LED node label, not the gpio controller */
        userled = &led0;
				pwm-0 = &ledc0;
				pwm-led0 = &pwm_led_blue;
    };

    leds {
        compatible = "gpio-leds";
        led0: d13 {
            gpios = <&gpio0 13 GPIO_ACTIVE_HIGH>;
        };
    };

	pwmleds {
		compatible = "pwm-leds";
		pwm_led_blue: pwm_led_gpio0_2 {
			label = "PWM LED0";
			pwms = <&ledc0 0 1000 PWM_POLARITY_NORMAL>;
		};
	};
};

&pinctrl {
	ledc0_default: ledc0_default {
		group1 {
			pinmux = <LEDC_CH0_GPIO2>;
			output-enable;
		};
	};
};

&ledc0 {
	pinctrl-0 = <&ledc0_default>;
	pinctrl-names = "default";
	status = "okay";
	#address-cells = <1>;
	#size-cells = <0>;
	channel0@0 {
		reg = <0x0>;
		timer = <0>;
	};
};
